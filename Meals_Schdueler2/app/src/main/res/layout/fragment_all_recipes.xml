    <ImageView
        android:id="@+id/imageViewPicRecipe"
        android:layout_width="60dp"
        android:layout_height="84dp"
        android:layout_marginStart="1dp"
        android:layout_weight="0.4"
        android:adjustViewBounds="false"
        android:contentDescription="TODO"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonRecipeName"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonRecipeName"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0."
        android:clickable="false"
        android:textStyle="bold"
        android:text="Name"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageViewInfo"
        android:layout_width="55dp"
        android:layout_height="84dp"
        android:layout_marginStart="3dp"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewPicRecipe"
        app:srcCompat="@drawable/info"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewCopy"
        android:layout_width="50dp"
        android:layout_height="84dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/copy"
        tools:srcCompat="@tools:sample/avatars" />




    <ImageView
        android:id="@+id/imageViewCreatorInfo"
        android:layout_width="50dp"
        android:layout_height="84dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewCopy"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/creator_image"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>